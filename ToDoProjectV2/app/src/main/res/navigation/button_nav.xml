<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_nav"
    app:startDestination="@id/fragmentOverview">

    <fragment
        android:id="@+id/fragmentOverview"
        android:name="com.example.todoprojectv2.overview.FragmentOverview"
        android:label="@string/appbar_overview"
        tools:layout="@layout/fragment_oveview">
        <action
            android:id="@+id/action_fragmentTodo_to_addToDo"
            app:destination="@id/addToDo" />
    </fragment>
    <fragment
        android:id="@+id/fragmentToDo"
        android:name="com.example.todoprojectv2.todo.FragmentTodo"
        android:label="@string/appbar_todo"
        tools:layout="@layout/fragment_todo" />
    <fragment
        android:id="@+id/addToDo"
        android:name="com.example.todoprojectv2.overview.addtodo.AddToDo"
        android:label="@string/appbar_add_todo"
        tools:layout="@layout/fragment_add_todo" />
    <fragment
        android:id="@+id/fragmentWeather"
        android:name="com.example.todoprojectv2.weather.FragmentWeather"
        android:label="@string/appbar_weather"
        tools:layout="@layout/fragment_weather" />
</navigation>